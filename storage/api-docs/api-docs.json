{
    "openapi": "3.0.0",
    "info": {
        "title": "My Laravel API",
        "description": "API documentation for my Laravel 12 project.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8085/api",
            "description": "Main API server"
        }
    ],
    "paths": {
        "/articles": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get a paginated list of articles",
                "description": "Retrieve articles with optional filters for category, author, source, publish date range, and free-text search across title, description, content, and keywords.",
                "operationId": "89181b74a8aa4d580750ede6aa32f92a",
                "parameters": [
                    {
                        "name": "categories_id",
                        "in": "query",
                        "description": "Filter by category identifiers (comma-separated)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "2,3"
                        }
                    },
                    {
                        "name": "authors_id",
                        "in": "query",
                        "description": "Filter by author identifiers (comma-separated)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "1,2"
                        }
                    },
                    {
                        "name": "sources_id",
                        "in": "query",
                        "description": "Filter by source identifiers (comma-separated)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "3,4"
                        }
                    },
                    {
                        "name": "publish_date",
                        "in": "query",
                        "description": "Date range filter in the format 'YYYY-MM-DD'",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "2025-01-01"
                        }
                    },
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Full-text search across title, description, content, and keywords",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "climate change"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of results per page (max 100)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 50
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated list of articles",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/ArticlesResource"
                                            }
                                        },
                                        "meta": {
                                            "$ref": "#/components/schemas/PaginationMeta"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/articles/{id}": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get a single article",
                "description": "Fetch the details of a specific article by its identifier.",
                "operationId": "126f0079c2def3834cf2c4a2456d16f9",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Article ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Article details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/ArticlesResource"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Article not found"
                    }
                }
            }
        },
        "/authors": {
            "get": {
                "tags": [
                    "Authors"
                ],
                "summary": "Get a list of all authors",
                "description": "Retrieve a paginated list of news authors with optional pagination controls",
                "operationId": "33b4ca0e528a8b6298d9942781a0c85a",
                "parameters": [
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of items per page (default: 50, max: 100)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 50
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/AuthorResource"
                                            }
                                        },
                                        "meta": {
                                            "$ref": "#/components/schemas/PaginationMeta"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Get a list of all categories",
                "description": "Retrieve a paginated list of news categories with optional pagination controls",
                "operationId": "ead5fb1cf2a7453acb2e37928a1b1eaf",
                "parameters": [
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of items per page (default: 50, max: 100)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 50
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/CategoryResource"
                                            }
                                        },
                                        "meta": {
                                            "$ref": "#/components/schemas/PaginationMeta"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sources": {
            "get": {
                "tags": [
                    "Sources"
                ],
                "summary": "Get a list of all sources",
                "description": "Retrieve a paginated list of news sources with optional filtering and sorting",
                "operationId": "21bca661d3026520af28d6595d6178fa",
                "parameters": [
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of items per page (default: 15, max: 100)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 15
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "key": {
                                                        "type": "string",
                                                        "example": "bbc-news"
                                                    },
                                                    "label": {
                                                        "type": "string",
                                                        "example": "BBC News"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "links": {
                                            "type": "object"
                                        },
                                        "meta": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "PaginationMeta": {
                "properties": {
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "from": {
                        "type": "integer",
                        "example": 1,
                        "nullable": true
                    },
                    "last_page": {
                        "type": "integer",
                        "example": 10
                    },
                    "path": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://api.example.com/api/articles"
                    },
                    "per_page": {
                        "type": "integer",
                        "example": 15
                    },
                    "to": {
                        "type": "integer",
                        "example": 15,
                        "nullable": true
                    },
                    "total": {
                        "type": "integer",
                        "example": 150
                    }
                },
                "type": "object"
            },
            "ArticlesResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "slug": {
                        "type": "string",
                        "example": "breaking-news-update"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "nullable": true
                    },
                    "content": {
                        "type": "string"
                    },
                    "image_url": {
                        "type": "string",
                        "format": "uri",
                        "nullable": true
                    },
                    "source_id": {
                        "type": "integer",
                        "nullable": true
                    },
                    "author": {
                        "type": "string",
                        "nullable": true
                    },
                    "link": {
                        "type": "string",
                        "format": "uri"
                    },
                    "published_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "category": {
                        "type": "string",
                        "nullable": true
                    },
                    "language": {
                        "type": "string",
                        "nullable": true
                    },
                    "keywords": {
                        "type": "string",
                        "nullable": true
                    },
                    "source": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/SourceResource"
                            }
                        ],
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "AuthorResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 3
                    },
                    "key": {
                        "type": "string",
                        "example": "cnn"
                    },
                    "label": {
                        "type": "string",
                        "example": "CNN"
                    }
                },
                "type": "object"
            },
            "CategoryResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 3
                    },
                    "key": {
                        "type": "string",
                        "example": "cnn"
                    },
                    "label": {
                        "type": "string",
                        "example": "CNN"
                    }
                },
                "type": "object"
            },
            "SourceResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 3
                    },
                    "key": {
                        "type": "string",
                        "example": "cnn"
                    },
                    "label": {
                        "type": "string",
                        "example": "CNN"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Articles",
            "description": "Articles"
        },
        {
            "name": "Authors",
            "description": "Authors"
        },
        {
            "name": "Categories",
            "description": "Categories"
        },
        {
            "name": "Sources",
